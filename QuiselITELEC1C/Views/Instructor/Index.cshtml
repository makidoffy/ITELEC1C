<table class="table table-dark">

    <tr>
        <th colspan="6">Instructor</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>
        <div class="text-align: center;">

            <a class="button" style="background-color: #18F9F8; border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer;"
               asp-action="AddInstructor">
                Enter an Instructor

            </a>
        </div>


    </tr>

    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetails" asp-route-id="@instructor.Id" asp-controller="Instructor">Show Details</a></td>
            <td><a asp-action="UpdateInstructor" asp-route-id="@instructor.Id">Update</a></td>
            <td><a asp-action="Delete" asp-route-id="@instructor.Id">Delete</a></td>


        </tr>

    }

</table>